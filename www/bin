const mongoose = require('mongoose');
const app = require('../dist/app').default;

//connect db or fail
mongoose
  .connect('mongodb://localhost:27017/rapptr_todo')
  .then(() => {
    app.listen(5050, () => {
      console.log('App started on port 5050')
    })
  }).catch((err) => {
    console.log('Database connection failed', err)
  })